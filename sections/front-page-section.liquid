<div class="front-page-section-container">
    <div class="front-page-section-image">
        <img src="{{ section.settings.image | img_url: '500x'}}" alt="{{ section.settings.image.alt }}">
    </div>
    <div class="front-page-section-content-container">
        {% if section.settings.title != black %}
            <span class="front-page-section-title">
                {{section.settings.title}}
            </span>
        {% endif %}
        {% if section.settings.content != black %}
            <span class="front-page-section-content">
                {{section.settings.content}}
            </span>
        {% endif %}
    </div>
</div>
{% stylesheet %}
.front-page-section-container {
    display: flex;
    flex-direction: row-reverse;
    justify-content: center;
    align-items: center;
    margin: 20px 0px;
}
.front-page-section-image {
    width: 40%;
}
.front-page-section-content-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40%;
    padding: 0.7%;
}
.front-page-section-title {
    font-size: 30px;
}
.front-page-section-content {
    text-align: center;
    font-size: 20px;
    line-height: 30px;
    margin: 10px 0;
}
    
{% endstylesheet %}
{% schema %}
{
    "name": "Front Page Section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        }
    ],
    "presets": [{
            "name": "Front Page Section"
        }
    ]
}

{% endschema %}